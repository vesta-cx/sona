{
	"name": "sona",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev --host -m dev",
		"build": "vite build",
		"preview": "pnpm run build && wrangler dev",
		"preview:dev": "pnpm run build && wrangler dev --env dev",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run",
		"gen": "wrangler types",
		"db:push": "drizzle-kit push",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "wrangler d1 migrations apply vesta-sona-db --remote",
		"db:migrate:dev": "wrangler d1 migrations apply vesta-sona-db-dev --remote --env dev",
		"db:migrate:local": "wrangler d1 migrations apply vesta-sona-db --local",
		"db:studio": "drizzle-kit studio",
		"capture-og": "pnpm exec tsx scripts/capture-og.ts",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build",
		"deploy": "pnpm run build && wrangler deploy",
		"deploy:dev": "pnpm run build && wrangler deploy --env dev",
		"cf-typegen": "wrangler types ./src/worker-configuration.d.ts"
	},
	"devDependencies": {
		"@chromatic-com/storybook": "^5.0.1",
		"@eslint/compat": "^2.0.2",
		"@eslint/js": "^10.0.1",
		"@inlang/paraglide-js": "^2.12.0",
		"@libsql/client": "^0.17.0",
		"@lucide/svelte": "^0.575.0",
		"@storybook/addon-a11y": "^10.2.10",
		"@storybook/addon-docs": "^10.2.10",
		"@storybook/addon-svelte-csf": "^5.0.11",
		"@storybook/addon-vitest": "^10.2.10",
		"@storybook/sveltekit": "^10.2.10",
		"@sveltejs/adapter-cloudflare": "^7.2.8",
		"@sveltejs/kit": "^2.53.0",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@tailwindcss/forms": "^0.5.11",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.2.0",
		"@types/node": "^25.3.0",
		"@vesta-cx/ui": "workspace:*",
		"@vitest/browser-playwright": "^4.0.18",
		"@vitest/coverage-v8": "^4.0.18",
		"clsx": "^2.1.1",
		"drizzle-kit": "^0.31.9",
		"drizzle-orm": "^0.45.1",
		"eslint": "^10.0.1",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-storybook": "^10.2.10",
		"eslint-plugin-svelte": "^3.15.0",
		"globals": "^17.3.0",
		"mdsvex": "^0.12.6",
		"playwright": "^1.58.2",
		"prettier": "^3.8.1",
		"prettier-plugin-svelte": "^3.5.0",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"sass": "^1.97.3",
		"storybook": "^10.2.10",
		"svelte": "^5.53.2",
		"svelte-check": "^4.4.3",
		"svelte-sonner": "^1.0.7",
		"tailwind-merge": "^3.5.0",
		"tailwindcss": "^4.2.0",
		"tsx": "^4.21.0",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.56.0",
		"vite": "^7.3.1",
		"vite-plugin-devtools-json": "^1.0.0",
		"vitest": "^4.0.18",
		"vitest-browser-svelte": "^2.0.2",
		"wrangler": "^4.67.0"
	},
	"dependencies": {
		"@nanostores/persistent": "^1.3.3",
		"@vesta-cx/storage": "workspace:*",
		"@vesta-cx/utils": "workspace:*",
		"layerchart": "2.0.0-next.46",
		"music-metadata": "^11.12.1",
		"nanostores": "^1.1.0"
	}
}